{% extends "Template.twig" %}
{% block conteudo %}
    <div class="col-sm-8 blog-main">
        {% for postagem in postagens %}
            <div class="blog-post">
                <h2 class="blog-post-title">{{ postagem.titulo }}</h2>
                <p class="blog-post-meta">{{ postagem.data }} por {{ postagem.autor.nome }}</p>
                {{ postagem.resumo|raw }} <a href="./postagem/{{ postagem.id }}">Leia mais...</a>
            </div>
        {% endfor %}
        <nav>
            <ul class="pager">
                {% if pIndice > 0 %}
                    <li><a href="./postagem/listar/10/{{ pIndice - 10 }}">Anterior</a></li>
                    {% endif %}
                    {% if postagens|length == 10 %} 
                    <li><a href="./postagem/listar/10/{{ pIndice + 10 }}">Pr√≥ximo</a></li>
                    {% endif %}
            </ul>
        </nav>
    </div>

    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
        <div class="sidebar-module sidebar-module-inset">
            <h4>About</h4>
            <p>Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
        </div>
        <div class="sidebar-module">
            <a class="btn btn-lg btn-primary" href="./postagem/adicionar"><i class="glyphicon glyphicon-plus-sign"></i> Nova postagem</a>
        </div>
        <div class="sidebar-module">
            <h4>Curta e Compartilhe!</h4>
            <ol class="list-unstyled">
                <li><a href="http://github.com/natanaelsimoes">GitHub</a></li>
                <li><a href="http://twitter.com/natanaelsimoes">Twitter</a></li>
                <li><a href="http://fb.com/natanaelsimoes.professor">Facebook</a></li>
            </ol>
        </div>
    </div>
{% endblock %}
